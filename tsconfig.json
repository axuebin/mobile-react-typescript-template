{
    "compilerOptions": {
        "module": "esnext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "es2015",
            "dom",
            "dom.iterable"
        ],
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx", "src/index.js",
    ],
}
